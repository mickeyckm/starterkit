<%- include('../layouts/header') -%>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
      <h1>Reset password</h1>

      <p class="lead">Enter your new password</p>

      <form method="post" action="/reset/<%= token %>">
        <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
        <%- resetPasswordForm.fields.password.toHTML(null, bootstrapField) -%>
        <%- resetPasswordForm.fields.password2.toHTML(null, bootstrapField) -%>
        <button type="submit" class="btn btn-default">Submit</button>
        <a href="/login" class="btn btn-link">Ha! I remember the password</a>
      </form>
    </div>
  </div>
</div>

<%- include('../layouts/footer') -%>
