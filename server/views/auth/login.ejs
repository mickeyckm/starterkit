<% include ../layouts/header.ejs -%>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
      <h1>Login</h1>

      <p class="lead">Enter your credentials</p>

      <form method="post" action="/login">
        <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
        <%- loginForm.fields.email.toHTML(null, bootstrapField) -%>
        <div class="pull-right">
          <a href="/forgot" tabindex="3">Forgot password?</a>
        </div>
        <%- loginForm.fields.password.toHTML(null, bootstrapField) -%>
        <button type="submit" class="btn btn-default" tabindex="4">Submit</button>
        <a href="/register" class="btn-link btn" tabindex="5">Don't have an account? Sign up here</a>
      </form>
    </div>
  </div>
</div>

<%- include('../layouts/footer') -%>
