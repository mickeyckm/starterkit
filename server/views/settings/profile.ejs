<% global.headerNav = 'settings'; %>
<% include ../layouts/header.ejs %>

<div class="container">
  <div class="page-header">
    <h1>Settings</h1>
  </div>

  <div class="row">
    <div class="col-md-3">
      <% var settingsNav = 'profile'; %>
      <% include _nav.ejs %>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">Update Profile</h4>
        </div>
        <div class="panel-body">
          <form class="form" method="post" action="/settings/profile">
            <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
            <div class="row">
              <div class="col-sm-6">
                <%- updateProfileForm.fields.firstname.toHTML(null, bootstrapField) -%>
              </div>
              <div class="col-sm-6">
                <%- updateProfileForm.fields.lastname.toHTML(null, bootstrapField) -%>
              </div>
            </div>
            <button type="submit" class="btn btn-default">Update profile</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>

<%- include('../layouts/footer') -%>
